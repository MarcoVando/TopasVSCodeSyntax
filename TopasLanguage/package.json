{
    "name": "topaslanguage",
    "displayName": "TopasLanguage",
    "description": "Language for TOPAS",
    "author": {"name": "Marco Vandone"},
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "inp",
            "aliases": ["TOPAScode", "inp"],
            "extensions": [".inp",".out"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "inp",
            "scopeName": "source.inp",
            "path": "./syntaxes/inp.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "inp",
                "path": "./snippets/inp.json"
            }
        ]
    }
}